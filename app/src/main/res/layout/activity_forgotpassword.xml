<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="forgotpasswordVM" type="com.ankitpatelsandroidapplication.app.modules.forgotpassword.data.viewmodel.ForgotpasswordVM"/>
    </data>
    <LinearLayout android:id="@+id/linearGroup97"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_50">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearGroup94"
                android:layout_gravity="top|start"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageIcon"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginStart="@dimen/_171pxh"
                    android:layout_width="@dimen/_34pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_icon_1"/>
                <TextView android:gravity="top|end"
                    android:id="@+id/txtCancel"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:layout_marginStart="@dimen/_102pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="@{forgotpasswordVM.forgotpasswordModel.txtCancel}"
                    style="@style/txtSkModernistskmodernistregular14" tools:text="@string/lbl_cancel"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearGroup93"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_40pxv" android:paddingTop="@dimen/_139pxv">
                <TextView android:gravity="center|start"
                    android:id="@+id/txtForgotpassword"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_96pxh"
                    android:layout_marginStart="@dimen/_96pxh"
                    android:layout_width="wrap_content"
                    android:text="@{forgotpasswordVM.forgotpasswordModel.txtForgotpassword}"
                    style="@style/txtDMSansbold24" tools:text="@string/lbl_forgot_password"/>
                <TextView android:gravity="center"
                    android:id="@+id/txtEnteryouremai"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_44pxh"
                    android:layout_marginStart="@dimen/_44pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="match_parent"
                    android:text="@{forgotpasswordVM.forgotpasswordModel.txtEnteryouremai}"
                    style="@style/txtSkModernistskmodernistregular14_1" tools:text="@string/msg_enter_your_emai"/>
                <FrameLayout android:id="@+id/frameGroup95"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_21pxh"
                    android:layout_marginTop="@dimen/_50pxv" android:layout_width="match_parent">
                    <View android:background="@color/black_900"
                        android:id="@+id/lineLine1"
                        android:layout_gravity="center|start"
                        android:layout_height="@dimen/_22pxv"
                        android:layout_marginBottom="@dimen/_22pxv"
                        android:layout_marginEnd="@dimen/_177pxh"
                        android:layout_marginStart="@dimen/_156pxh"
                        android:layout_marginTop="@dimen/_32pxv" android:layout_width="@dimen/_1pxh"/>
                    <LinearLayout android:id="@+id/linearForm"
                        android:layout_gravity="top|start"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <TextView android:gravity="top|start"
                            android:id="@+id/txtTitle"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_23pxh"
                            android:layout_marginStart="@dimen/_23pxh"
                            android:layout_width="wrap_content"
                            android:text="@{forgotpasswordVM.forgotpasswordModel.txtTitle}"
                            style="@style/txtSkModernistskmodernistregular12" tools:text="@string/lbl_email_address"/>
                        <EditText
                            android:background="@drawable/rectangle_bg_white_a700_border_gray_300_radius_15"
                            android:hint="@string/msg_enter_email_add"
                            android:id="@+id/etForm"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="match_parent"
                            android:paddingBottom="@dimen/_16pxv"
                            android:paddingStart="@dimen/_23pxh"
                            android:paddingTop="@dimen/_15pxv"
                            android:singleLine="true"
                            android:text="@={forgotpasswordVM.forgotpasswordModel.etFormValue}"
                            android:textColorHint="@color/gray_500" style="@style/etSolidRoundedOutline"/>
                    </LinearLayout>
                </FrameLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewRectangle11"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_89pxh"
                    android:layout_marginStart="@dimen/_82pxh"
                    android:layout_marginTop="@dimen/_171pxv"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white_A700"
                    app:cardCornerRadius="@dimen/_20pxh"
                    app:cardElevation="@dimen/_1pxh"
                    app:cardUseCompatPadding="true" style="@style/groupStylewhite_A700cornerRadius">
                    <LinearLayout android:id="@+id/linearGroup403"
                        android:layout_gravity="center|start"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_13pxv"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <ImageView android:id="@+id/imageGoogle"
                            android:layout_gravity="top"
                            android:layout_height="@dimen/_24pxh"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_width="@dimen/_24pxh"
                            android:scaleType="fitXY" android:src="@drawable/img_google_1"/>
                        <TextView android:gravity="center"
                            android:id="@+id/txtSigninwithGo"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginStart="@dimen/_11pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:text="@{forgotpasswordVM.forgotpasswordModel.txtSigninwithGo}"
                            style="@style/txtSkModernistskmodernistregular14_3" tools:text="@string/msg_sign_in_with_go"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <FrameLayout android:id="@+id/frameButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_27pxh"
                    android:layout_marginStart="@dimen/_13pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="match_parent" style="@style/groupStylecornerRadius">
                    <TextView android:gravity="center"
                        android:id="@+id/txtCreateanaccou"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15pxv"
                        android:layout_marginEnd="@dimen/_107pxh"
                        android:layout_marginStart="@dimen/_107pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_width="match_parent"
                        android:text="@{forgotpasswordVM.forgotpasswordModel.txtCreateanaccou}"
                        style="@style/txtSkModernistskmodernistbold14" tools:text="@string/msg_create_an_accou"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/frameButton1"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_26pxh"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent" style="@style/groupStylecornerRadius_1">
                    <TextView android:gravity="center"
                        android:id="@+id/txtCreateanaccou1"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15pxv"
                        android:layout_marginEnd="@dimen/_94pxh"
                        android:layout_marginStart="@dimen/_94pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_width="match_parent"
                        android:text="@{forgotpasswordVM.forgotpasswordModel.txtCreateanaccou1}"
                        style="@style/txtSkModernistskmodernistbold16_1" tools:text="@string/msg_login_to_my_acc"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
